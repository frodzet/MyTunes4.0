          <TableColumn fx:id="colPlaylist" prefWidth="135.0" text="Playlists" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
