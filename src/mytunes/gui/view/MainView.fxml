<AnchorPane id="AnchorPane" prefHeight="592.0" prefWidth="816.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mytunes.gui.controller.MainViewController">
